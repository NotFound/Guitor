class Thing
{
    var colorspec;
    function Thing(string colorspec)
    {
        self.colorspec = colorspec;
    }
    function setforeground(drawable)
    {
        drawable.SetForeground(self.colorspec);
    }
}

class Line : Thing
{
    var x0;
    var y0;
    var x1;
    var y1;
    function Line(string colorspec, x0, int y0, int x1, int y1)
    {
        self.Thing(colorspec);
        self.x0 = x0;
        self.x1 = x1;
        self.y0 = y0;
        self.y1 = y1;
    }
    function draw(drawable)
    {
        self.setforeground(drawable);
        drawable.DrawLine(self.x0, self.y0, self.x1, self.y1);
    }
}

class HandLine : Thing
{
    var xcoord;
    var ycoord;
    function HandLine(string colorspec)
    {
        self.Thing(colorspec);
        int x[];
        int y[];
        self.xcoord = x;
        self.ycoord = y;
    }
    function push(int x, int y)
    {
        push(self.xcoord, x);
        push(self.ycoord, y);
    }
    function draw(drawable)
    {
        var x = self.xcoord;
        var y = self.ycoord;
        int n = elements(x) - 1;
        self.setforeground(drawable);
        if (n == 0)
            drawable.DrawPoint(x[0], y[0]);
        else
            for (int i = 0; i < n; ++i)
                drawable.DrawLine(x[i], y[i], x[i + 1], y[i + 1]);
    }
}

class BaseRectangle : Thing
{
    var x0;
    var y0;
    var x1;
    var y1;
    function BaseRectangle(string colorspec, int x0, int y0, int x1, int y1)
    {
        self.Thing(colorspec);
        if (x0 < x1) {
            self.x0 = x0;
            self.x1 = x1;
        }
        else {
            self.x0 = x1;
            self.x1 = x0;
        }
        if (y0 < y1) {
            self.y0 = y0;
            self.y1 = y1;
        }
        else {
            self.y0 = y1;
            self.y1 = y0;
        }
    }
}

class Rectangle : BaseRectangle
{
    function Rectangle(string colorspec, int x0, int y0, int x1, int y1)
    {
        self.BaseRectangle(colorspec, x0, y0, x1, y1);
    }
    function draw(drawable)
    {
        self.setforeground(drawable);
        int x0 = self.x0;
        int x1 = self.x1;
        int y0 = self.y0;
        int y1 = self.y1;
        drawable.DrawRectangle(x0, y0, x1 - x0, y1 - y0);
    }
}

class FillRectangle : BaseRectangle
{
    function FillRectangle(string colorspec, int x0, int y0, int x1, int y1)
    {
        self.BaseRectangle(colorspec, x0, y0, x1, y1);
    }
    function draw(drawable)
    {
        self.setforeground(drawable);
        int x0 = self.x0;
        int x1 = self.x1;
        int y0 = self.y0;
        int y1 = self.y1;
        drawable.FillRectangle(x0, y0, x1 - x0, y1 - y0);
    }
}

//**********************************************************************

class Pizarra : TopLevelWindow
{
    var width;
    var height;
    var yboard;
    var board;
    function Pizarra(controller)
    {
        string title = "pizarra";
        int width = 600;
        int height = 400;
        self.width = width;
        self.height = height;
        self.TopLevelWindow(controller, title, 0, 0, width, height,
                { "background_color" : controller.display.ParseColor("grey") } );
        controller.created(self);

        self.OnDestroy += function (event)
        {
            self.controller.destroyed(self);
        };
        self.OnConfigure += function (event) { self.onConfigure(event); };
        self.OnClientMessage += function (event) { self.onClientMessage(event); };

        var colorsel = new ColorSelector(self, 4, 2);
        int yboard = colorsel.getwidth() + 6;
        self.yboard = yboard;
        self.board = new Board(self, yboard, 2, width - yboard - 2, height - 4);
        self.board.Map();
        int y = colorsel.getheight() + 4;
        var toolsel = new ToolSelector(self, 4, y);
        y += toolsel.getheight() + 2;
        var b = new TextButton(self, 4, y, 0, 0,
                "quit", null);
        b.OnClick += function (event) { self.Destroy(); };
        b.Map();
    }
    function onConfigure(event)
    {
        int nwidth = event.width();
        int nheight = event.height();
        var width = self.width;
        var height = self.height;
        if (width != nwidth || height != nheight) {
            if (self.board != null)
                self.board.ResizeWindow(nwidth - self.yboard - 2, nheight - 4);
            self.width = nwidth;
            self.height = nheight;
        }
    }
    function onClientMessage(event)
    {
        say('Bye');
        self.Destroy();
    }

    function setcolor(string spec)
    {
        self.board.setcolor(spec);
    }
    function setmode(int mode)
    {
        self.board.setmode(mode);
    }
}

